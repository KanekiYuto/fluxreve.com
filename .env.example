# 站点地址
NEXT_PUBLIC_SITE_URL=https://fluxreve.com

# ==========================================
# Creem Pay 支付配置
# ==========================================

# Creem Pay API 密钥
CREEM_API_KEY="your_creem_api_key_here"

# Creem Pay Webhook 密钥
CREEM_WEBHOOK_SECRET="your_creem_webhook_secret_here"

# Creem Pay API URL (可选,默认使用官方 API)
CREEM_API_URL="https://api.creem.io"

# 环境模式 (production 或 development)
NODE_ENV="production"

# ==========================================
# Creem Pay 产品 ID 配置
# 用于定价页面的订阅按钮,区分不同方案和订阅周期
# ==========================================

# 试用版（Experience） - 一次性订阅产品ID
NEXT_PUBLIC_CREEM_PAY_TRIAL_ID="your_basic_monthly_product_id"

# 基础版 (Basic) - 月度订阅产品 ID
NEXT_PUBLIC_CREEM_PAY_BASIC_MONTHLY_ID="your_basic_monthly_product_id"

# 基础版 (Basic) - 年度订阅产品 ID
NEXT_PUBLIC_CREEM_PAY_BASIC_YEARLY_ID="your_basic_yearly_product_id"

# 专业版 (Pro) - 月度订阅产品 ID
NEXT_PUBLIC_CREEM_PAY_PRO_MONTHLY_ID="your_pro_monthly_product_id"

# 专业版 (Pro) - 年度订阅产品 ID
NEXT_PUBLIC_CREEM_PAY_PRO_YEARLY_ID="your_pro_yearly_product_id"

# ==========================================
# Better Auth 认证配置
# ==========================================

# Better Auth 密钥 (用于加密会话和 token)
# 生成方式: openssl rand -base64 32
BETTER_AUTH_SECRET="your_better_auth_secret_here"

# ==========================================
# Supabase 数据库配置
# 获取方式: https://supabase.com/dashboard/project/_/settings/database
# ==========================================

# Supabase PostgreSQL 连接 URL (用于 Better Auth + Drizzle ORM)
# 格式: postgresql://postgres.[项目引用ID]:[密码]@aws-0-[区域].pooler.supabase.com:6543/postgres
# 注意: 使用 Transaction 模式端口 6543 (推荐用于 Serverless)
DATABASE_URL="postgresql://postgres.your_project_ref:your_password@aws-0-region.pooler.supabase.com:6543/postgres"

# ==========================================
# Google OAuth 配置
# 获取方式: https://console.cloud.google.com/apis/credentials
# ==========================================

# Google OAuth Client ID (服务端和客户端共用)
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"

# 客户端公开的 Google Client ID (用于 Google One Tap 和浏览器端验证)
NEXT_PUBLIC_GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"

# Google OAuth Client Secret (仅服务端使用,不要在浏览器端暴露)
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# Wavespeed 平台 API Key
WAVESPEED_API_KEY="your_wavespeed_api_key_here"

# ==========================================
# Cloudflare R2 存储配置
# 获取方式: https://dash.cloudflare.com/r2
# ==========================================

# 存储区域 (R2 使用 auto)
STORAGE_REGION="auto"

# 存储桶名称
STORAGE_BUCKET_NAME="your_bucket_name"

# 访问密钥 ID
STORAGE_ACCESS_KEY_ID="your_access_key_id"

# 访问密钥
STORAGE_SECRET_ACCESS_KEY="your_secret_access_key"

# R2 端点 URL
STORAGE_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"

# 公开访问 URL (R2.dev 域名或自定义域名)
STORAGE_PUBLIC_URL="https://pub-xxxxxxxxx.r2.dev/"

# ==========================================
# SMTP 邮件服务配置
# 支持：Gmail、Outlook、Hostinger、自建服务器等
# ==========================================

# SMTP 服务器地址
# Gmail: smtp.gmail.com
# Outlook: smtp-mail.outlook.com
# Hostinger: smtp.hostinger.com
SMTP_HOST="smtp.hostinger.com"

# SMTP 端口 (587 用于 TLS，465 用于 SSL)
SMTP_PORT="465"

# SMTP 用户名（邮箱账号）
# Gmail: your-email@gmail.com
# Outlook: your-email@outlook.com
# Hostinger: your-mailbox@yourdomain.com
SMTP_USER="support@fluxreve.com"

# SMTP 密码
# Gmail: 使用应用专用密码 https://myaccount.google.com/apppasswords
# Outlook: 使用账户密码
# Hostinger: Hostinger 面板中设置的邮箱密码
SMTP_PASS="zhouenda888"

# 邮件发件人地址（显示在邮件中）
SMTP_FROM_EMAIL="support@fluxreve.com"

# 邮件发件人名称
SMTP_FROM_NAME="FluxReve"

# 是否使用 TLS (port 587 使用 TLS，port 465 使用 SSL，此选项用于 587 端口)
SMTP_USE_TLS="true"
